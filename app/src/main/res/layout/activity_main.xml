<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.xykgj.tx.xinyongkaguanjia.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <View
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RadioGroup
        android:id="@+id/rg_main_grouop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:id="@+id/rb_item_homepage"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="首页"
            android:paddingTop="5dp"
            android:textColor="@drawable/tv_mian_tab_bg"
            android:drawableTop="@drawable/rb_homepage_bg"
            android:checked="true"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_item_invest"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="投资"
            android:paddingTop="5dp"
            android:textColor="@drawable/tv_mian_tab_bg"
            android:drawableTop="@drawable/rb_investment_bg"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_item_borrow"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="借钱"
            android:paddingTop="5dp"
            android:textColor="@drawable/tv_mian_tab_bg"
            android:drawableTop="@drawable/rb_borrow_bg"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_item_user"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:paddingTop="5dp"
            android:textColor="@drawable/tv_mian_tab_bg"
            android:drawableTop="@drawable/rb_userinfo_bg"
            android:layout_height="match_parent" />
    </RadioGroup>
</LinearLayout>
