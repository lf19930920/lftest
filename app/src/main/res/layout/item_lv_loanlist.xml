<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_loanlist_item_icon"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_loanlist_item_title"
        android:text="拍拍贷"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_loanlist_item_icon"
        android:layout_alignTop="@id/iv_loanlist_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_loanlist_item_monthinterest_text"
        android:text="月利率"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_loanlist_item_title"
        android:layout_alignLeft="@id/tv_loanlist_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_loanlist_item_monthinterest"
        android:textColor="#ee1111"
        android:text="0.86%"
        android:layout_toRightOf="@id/tv_loanlist_item_monthinterest_text"
        android:layout_alignBottom="@id/tv_loanlist_item_monthinterest_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_loanlist_item_applynum"
        android:text="1235"
        android:layout_below="@id/tv_loanlist_item_monthinterest_text"
        android:layout_alignLeft="@id/tv_loanlist_item_monthinterest_text"
        android:textColor="#333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="人已申请"
        android:layout_toRightOf="@id/tv_loanlist_item_applynum"
        android:layout_alignBottom="@id/tv_loanlist_item_applynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_loanlist_item_maxlimit"
        android:text="5.0"
        android:textColor="#ee1111"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tv_loanlist_item_monthinterest"
        android:layout_alignBottom="@id/tv_loanlist_item_monthinterest"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="万"
        android:textSize="15sp"
        android:textColor="#ee1111"
        android:layout_toRightOf="@id/tv_loanlist_item_maxlimit"
        android:layout_alignBottom="@id/tv_loanlist_item_maxlimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="最高额度"
        android:textSize="12sp"
        android:layout_below="@id/tv_loanlist_item_maxlimit"
        android:layout_alignLeft="@id/tv_loanlist_item_maxlimit"
        android:layout_alignTop="@id/tv_loanlist_item_applynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_loanlist_item_accounttime"
        android:text="4小时到账"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/tv_loanlist_item_applynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_loanlist_item_applynow"
        android:text="立即申请"
        android:textSize="12sp"
        android:textColor="#FF6600"
        android:background="@drawable/btn_allcredit_bg"
        android:layout_alignParentRight="true"
        android:layout_above="@id/tv_loanlist_item_accounttime"
        android:layout_width="70dp"
        android:layout_height="30dp" />
</RelativeLayout>


