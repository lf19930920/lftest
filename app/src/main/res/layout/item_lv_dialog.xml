<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_chooseBankCard_icon"
        android:background="@mipmap/ny"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_chooseBankCard_title"
        android:layout_alignTop="@id/iv_chooseBankCard_icon"
        android:layout_toRightOf="@id/iv_chooseBankCard_icon"
        android:text="农业银行（5214）"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_chooseBankCard_limit"
        android:layout_alignLeft="@id/tv_chooseBankCard_title"
        android:layout_toRightOf="@id/iv_chooseBankCard_icon"
        android:layout_alignBottom="@id/iv_chooseBankCard_icon"
        android:text="可用支付额度 20000.00元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_chooseBankCard_checked"
        android:background="@mipmap/paydetail_complete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="15dp"
        android:layout_height="15dp" />
</RelativeLayout>