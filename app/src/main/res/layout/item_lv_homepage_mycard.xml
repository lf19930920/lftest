<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_homepage_mycard"
        android:background="@mipmap/home_js_yhk_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:background="@mipmap/home_js_yhk"-->
        <ImageView
            android:id="@+id/iv_homepage_mycard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_homepage_bankname"
            android:text="中国建设银行"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_homepage_mycard"
            android:layout_alignTop="@id/iv_homepage_mycard"
            android:textSize="15sp"
            android:textColor="#F0F8FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_homepage_banktail"
            android:text="尾号4072"
            android:textColor="#F0F8FF"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            android:layout_alignBottom="@id/iv_homepage_mycard"
            android:layout_toRightOf="@id/iv_homepage_mycard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_homepage_restmoney"
            android:text="¥1234"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@id/iv_homepage_mycard"
            android:layout_below="@id/tv_homepage_banktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_homepage_desc"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="剩余应还"
            android:textColor="#FFF"
            android:layout_below="@id/tv_homepage_restmoney"
            android:layout_alignLeft="@id/iv_homepage_mycard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_homepage_dueto"
            android:text="05"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#F0F8FF"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_homepage_dueto_text"
            android:text="天后到期"
            android:textColor="#F0F8FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/tv_homepage_banktail"
            android:layout_toRightOf="@+id/tv_homepage_dueto"
            android:layout_toEndOf="@+id/tv_homepage_dueto" />
        <TextView
            android:id="@+id/tv_homepage_bankdate"
            android:text="06-12"
            android:textColor="#F0F8FF"
            android:layout_below="@id/tv_homepage_dueto_text"
            android:layout_alignLeft="@id/tv_homepage_dueto_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_homepage_bankrepay"
            android:background="@drawable/ib_addcard_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_width="70dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>