<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/userinfo_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_userinfo_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@mipmap/userinfo_icon" />

            <TextView
                android:id="@+id/tv_userinfo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_userinfo_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:text="设置"
            android:textColor="@drawable/selector_tv_userinfo_setting"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_userinfo_realname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ll_userinfo_item_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:background="@mipmap/userinfo_auth"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="实名认证"
            android:textSize="16sp" />
        <ImageView
            android:background="@mipmap/carddetail_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_userinfo_gainmoney"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ll_userinfo_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/userinfo_gainmoney"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="赚客"
            android:textSize="16sp" />

        <ImageView
            android:background="@mipmap/carddetail_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_userinfo_applycard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ll_userinfo_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/userinfo_takecard"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="办卡"
            android:textSize="16sp" />

        <ImageView
            android:background="@mipmap/carddetail_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_userinfo_helpcenter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ll_userinfo_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/userinfo_help"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="帮助中心"
            android:textSize="16sp" />

        <ImageView
            android:background="@mipmap/carddetail_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_userinfo_callus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ll_userinfo_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/userinfo_callus"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="联系我们"
            android:textSize="16sp" />

        <ImageView
            android:background="@mipmap/carddetail_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</LinearLayout>