<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <LinearLayout
            android:id="@+id/ll_register_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/app_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="注册"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="手机号码"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_register_phone"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:inputType="phone"
            android:textSize="16sp"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:hint="请输入您的手机号码"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="#e6e6e6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="验证码"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="码"
            android:textSize="16sp"
            android:textColor="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_register_sms"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:hint="请输入短信验证码"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_register_sms"
            android:text="获取"
            android:textColor="#ff6600"
            android:background="@drawable/btn_allcredit_bg"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:background="#e6e6e6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="密码"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="密码"
            android:textSize="16sp"
            android:textColor="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_register_pwd"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:hint="密码长度6-16位，不能有特殊字符"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_register_andlogin"
        android:text="注册并登录"
        android:textColor="#FFF"
        android:background="@drawable/btn_loginandreg_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>