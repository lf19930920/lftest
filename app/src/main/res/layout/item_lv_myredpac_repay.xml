<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@mipmap/myredpag_item_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_myredpac_repay_newvip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新人有礼"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_myredpac_repay_duetotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_repay_newvip"
        android:layout_below="@id/tv_myredpac_repay_newvip"
        android:layout_marginTop="5dp"
        android:text="2018-06-01 到期" />

    <TextView
        android:id="@+id/tv_myredpac_repay_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_repay_newvip"
        android:layout_below="@id/tv_myredpac_repay_duetotime"
        android:layout_marginTop="10dp"
        android:text="仅限用于信用卡还款" />

    <TextView
        android:id="@+id/tv_myredpac_repay_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_repay_newvip"
        android:layout_below="@id/tv_myredpac_repay_limit"
        android:layout_marginTop="5dp"
        android:text="支持储蓄卡、支付宝、微信还款" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_myredpac_repay_duetotime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myredpac_repay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="#FFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_myredpac_repay_moneytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="元"
            android:textColor="#FFF" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myredpac_repay_usenow"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_alignTop="@id/tv_myredpac_repay_limit"
        android:background="@drawable/tv_noredpac_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>
