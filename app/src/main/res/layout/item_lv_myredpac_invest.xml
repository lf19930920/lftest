<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@mipmap/myredpag_item_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_myredpac_invest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="省心投单笔≥5000元即送"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_myredpac_invest_duetotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_invest_title"
        android:layout_below="@id/tv_myredpac_invest_title"
        android:layout_marginTop="5dp"
        android:text="2018-06-25 到期" />

    <TextView
        android:id="@+id/tv_myredpac_invest_welfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_invest_title"
        android:layout_below="@id/tv_myredpac_invest_duetotime"
        android:layout_marginTop="15dp"
        android:text="新手福利" />

    <TextView
        android:id="@+id/tv_myredpac_invest_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myredpac_invest_title"
        android:layout_below="@id/tv_myredpac_invest_welfare"
        android:layout_marginTop="5dp"
        android:text="适用于省心投30天及以上项目" />

    <LinearLayout
        android:id="@+id/ll_myredpac_invest_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@id/tv_myredpac_invest_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myredpac_invest_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="元"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myredpac_invest_cashred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/ll_myredpac_invest_money"
        android:layout_below="@id/ll_myredpac_invest_money"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/investnouseredpag_item_icon"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tv_myredpac_invest_redtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现金红包"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myredpac_invest_usenow"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tv_noredpac_use"
        android:layout_below="@id/ll_myredpac_invest_cashred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:textColor="#FFF" />
    </LinearLayout>


</RelativeLayout>
