<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_allcredit_lv_icon"
        android:layout_width="100dp"
        android:layout_height="70dp" />
    <Button
        android:id="@+id/btn_allcredit_lv_applynow"
        android:text="立即申请"
        android:textSize="13sp"
        android:textColor="#ff6600"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_allcredit_bg"
        android:layout_width="70dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_allcredit_lv_title"
        android:text="招商信用卡"
        android:textSize="16sp"
        android:layout_toLeftOf="@id/btn_allcredit_lv_applynow"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_allcredit_lv_icon"
        android:layout_alignTop="@id/iv_allcredit_lv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_allcredit_lv_gift"
        android:text="送899元阿尔卑斯拉杆箱"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_allcredit_lv_applynow"
        android:layout_alignLeft="@id/tv_allcredit_lv_title"
        android:layout_toRightOf="@id/iv_allcredit_lv_icon"
        android:layout_below="@id/tv_allcredit_lv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_allcredit_lv_desc"
        android:text="百分百提现，免手续费"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_allcredit_lv_applynow"
        android:layout_below="@id/tv_allcredit_lv_gift"
        android:layout_alignLeft="@id/tv_allcredit_lv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>